@using Microsoft.AspNetCore.Http
@{
    var userName = Context.Session.GetString("UserName") ?? "User";
    var role = Context.Session.GetString("UserRole") ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IBanKing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IBanKing.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="layout-wrapper">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <button id="toggle-sidebar">&#9776;</button>
            </div>

            <div class="user-footer">
                <img src="/images/user.png" alt="User photo">
                <span>@userName</span>
            </div>
        </aside>
        <div class="main-content-wrapper">
            <main class="main-content">
                <div class="page-body">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/logout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>