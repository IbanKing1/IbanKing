@using Microsoft.AspNetCore.Http
@using IBanKing.Services
@inject INotificationService NotificationService
@{
    var userName = Context.Session.GetString("UserName") ?? "Client";
    var role = Context.Session.GetString("UserRole") ?? "";
    var userId = Context.Session.GetString("UserId");
    var unreadCount = await NotificationService.GetUnreadCountAsync(userId);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IBanKing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IBanKing.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="layout-wrapper">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <button id="toggle-sidebar">&#9776;</button>
            </div>

            <ul>
                <li><a class="btn" asp-page="/Client/Index">Home</a></li>
                <li><a class="btn" asp-page="/Client/Transactions">Transactions</a></li>
                <li><a class="btn" asp-page="/MakePayment/Index">Make Payment</a></li>
                <li><a class="btn" asp-page="/ExchangeRate/Index">Exchange Rate</a></li>
                <li><a class="btn" asp-page="/Client/Account">Account</a></li>
                <li class="nav-item dropdown position-relative me-2">
                    <a class="nav-link position-relative px-2" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-bell fs-5"></i>
                        @if (unreadCount > 0)
                        {
                            <span class="badge bg-danger notification-badge">@unreadCount</span>
                        }
                    </a>
                    <div class="dropdown-menu dropdown-menu-end notification-dropdown" aria-labelledby="notificationsDropdown">
                        <div class="notification-header">
                            Notifications
                        </div>
                        <div class="notification-list">
                            @{
                                var unreadNotifications = (await NotificationService.GetUserNotificationsAsync(userId, 5))
                                .Where(n => !n.IsRead)
                                .ToList();
                            }

                            @if (unreadNotifications.Any())
                            {
                                foreach (var notification in unreadNotifications)
                                {
                                    <div class="dropdown-item notification-item unread"
                                         data-notification-id="@notification.Id">
                                        <div class="d-flex align-items-center">
                                            <div class="notification-icon me-3">
                                                <i class="@notification.IconClass"></i>
                                            </div>
                                            <div class="notification-content">
                                                <div class="d-flex justify-content-between">
                                                    <div class="notification-title">@notification.Title</div>
                                                    <div class="notification-time">@notification.TimeAgo</div>
                                                </div>
                                                <div class="notification-message">@notification.Message</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-notifications">
                                    <i class="fas fa-check-circle me-2"></i> No new notifications
                                </div>
                            }
                        </div>
                        <a asp-page="/Client/Notifications" class="see-all-btn">
                            <i class="fas fa-list me-2"></i> See All Notifications
                        </a>
                    </div>

                <li>
                    <form method="post" asp-page="/Logout/Index">
                        <button class="btn btn-danger mt-2">Logout</button>
                    </form>
                </li>
            </ul>

            <div class="user-footer">
                <img src="~/images/user.png" alt="User photo">
                <span>@userName</span>
            </div>
        </aside>

        <div class="main-content-wrapper">
            <main class="main-content">
                <div class="page-body">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="page-footer text-center mt-4">
        <ul class="list-inline">
            <li class="list-inline-item">
                <a class="btn btn-link" asp-page="/TermsAndConditions/Index">Terms and Conditions</a>
            </li>
            <li class="list-inline-item">
                <a class="btn btn-link" asp-page="/Contact/Index">Contact</a>
            </li>
            <li class="list-inline-item">
                <a class="btn btn-link" asp-page="/UserFeedback/Index">Feedback</a>
            </li>
        </ul>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/logout.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.notification-item').forEach(item => {
                item.addEventListener('click', function() {
                    const notificationId = this.getAttribute('data-notification-id');
                    const redirectUrl = '@Url.Page("/Client/Notifications")';

                    fetch(`/Client/Notifications?handler=MarkAsRead&id=${notificationId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    }).then(() => {
                        updateNotificationCount();

                        window.location.href = redirectUrl;
                    });
                });
            });

            function updateNotificationCount() {
                fetch('/Client/Notifications?handler=UnreadCount')
                    .then(response => response.json())
                    .then(count => {
                        const badge = document.querySelector('.notification-badge');
                        if (count > 0) {
                            badge.textContent = count;
                            badge.style.display = 'block';
                        } else {
                            badge.style.display = 'none';
                        }
                    });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 