@page
@model IBanKing.Pages.BankEmployee.TermsAndConditionsModel
@{
    ViewData["Title"] = "Terms and Conditions";
    Layout = "_LayoutEmployee";
}

<div class="terms-view-container">
    <div class="terms-header">
        <h1>Terms and Conditions</h1>
        <p class="last-updated">Last updated: @Model.Terms?.LastUpdated.ToString("f")</p>
    </div>

    <div class="terms-content">
        <pre>@Model.Terms?.Content</pre>
    </div>
</div>

<style>
    .terms-view-container {
        display: flex;
        flex-direction: column;
        height: calc(100vh - 150px);
        padding: 20px;
        overflow: hidden;
    }

    .terms-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .terms-header h1 {
            font-size: 2rem;
            color: #2c3e50;
        }

    .last-updated {
        color: #6c757d;
        font-size: 1rem;
    }

    .terms-content {
        flex: 1;
        overflow-y: auto;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        padding: 20px;
        background-color: #f9f9f9;
    }

        .terms-content pre {
            white-space: pre-wrap;
            font-family: inherit;
            margin: 0;
            padding: 0;
            background: transparent;
            border: none;
            font-size: 1rem;
            line-height: 1.5;
            color: #333;
        }

    @@media (max-width: 768px) {
        .terms-view-container {
            height: calc(100vh - 120px);
            padding: 15px;
        }

        .terms-content {
            padding: 15px;
        }
    }
</style>