@page
@model IBanKing.Pages.BankEmployee.ManageAccountsModel
@{
    Layout = "_LayoutEmployee";
    ViewData["Title"] = "Manage Client Accounts";
}

<h2>Manage Client Accounts</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Transaction Limit</th>
            <th>Max Transaction Amount</th>
            <th>Balance</th>
            <th>Edit</th>
            <th>Block/Unblock</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            var account = Model.Accounts.FirstOrDefault(a => a.UserId == client.UserId);
            <tr>
                <form method="post" asp-page-handler="EditClient">
                <td>
                    <input type="hidden" name="UserId" value="@client.UserId" />
                        @if (account != null)
                        {
                        <input type="hidden" name="AccountId" value="@account.AccountId" />
                        }
                    <input type="text" name="EditedName" class="form-control" value="@client.Name" />
                </td>
                <td>@client.Email</td>
                <td>@client.PhoneNumber</td>
                <td>
                        @if (client.IsBlocked)
                        {
                        <span class="text-danger">Blocked</span>
                        }
                        else
                        {
                        <span class="text-success">Active</span>
                        }
                </td>
                <td>
                    <input type="number" name="EditedTransactionLimit" class="form-control" value="@client.TransactionLimit" min="0" />
                </td>
                <td>
                    <input type="number" name="EditedTransactionMaxAmount" class="form-control" value="@client.TransactionMaxAmount" min="0" step="0.01" />
                </td>
                <td>
                        @if (account != null)
                        {
                        <input type="number" name="EditedBalance" class="form-control" value="@account.Balance" min="0" step="0.01" />
                        }
                        else
                        {
                        <span class="text-muted">No account</span>
                        }
                </td>
                <td>
                    <button type="submit" class="btn btn-warning btn-sm">Save</button>
                </td>
                </form>
                <td>
                    <form method="post" asp-page-handler="ToggleBlock" asp-route-id="@client.UserId">
                        <button type="submit" class="btn @(client.IsBlocked ? "btn-success" : "btn-danger") btn-sm">
                            @(client.IsBlocked ? "Unblock" : "Block")
                        </button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-page-handler="DeleteClient" asp-route-id="@client.UserId" onsubmit="return confirm('Are you sure you want to delete this client?');">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
