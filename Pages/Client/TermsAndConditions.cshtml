@page
@model IBanKing.Pages.Client.TermsAndConditionsModel
@{
    ViewData["Title"] = "Terms and Conditions";
    Layout = "_LayoutClient";
}

<h1 class="text-center">Terms and Conditions</h1>
<p class="text-muted text-center">Last updated: @Model.Terms?.LastUpdated.ToString("f")</p>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                @Html.Raw(Model.Terms?.Content ?? "Terms and conditions have not yet been defined.")
            </div>
        </div>
    </div>
</div>