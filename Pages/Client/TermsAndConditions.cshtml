@page
@model IBanKing.Pages.Client.TermsAndConditionsModel
@{
    ViewData["Title"] = "Terms and Conditions";
    Layout = "_LayoutClient";
}

<div class="terms-view-container">
    <div class="terms-header">
        <h1>Terms and Conditions</h1>
        <p class="last-updated">Last updated: @Model.Terms?.LastUpdated.ToString("f")</p>
    </div>

    <div class="terms-content">
        <pre>@Model.Terms?.Content</pre>
    </div>
</div>

<style>
    .terms-view-container {
        height: calc(100vh - 150px);
        padding: 20px;
    }

    .terms-content {
        height: calc(100% - 80px);
        overflow-y: auto;
        padding: 20px;
        background: #f9f9f9;
        border: 1px solid #eee;
        margin-top: 20px;
    }

        .terms-content pre {
            white-space: pre-wrap;
            font-family: inherit;
            line-height: 1.6;
        }
</style>