@page
@model IBanKing.Pages.Client.FAQModel
@{
    ViewData["Title"] = "Frequently Asked Questions";
    Layout = "_LayoutClient";
}
<link rel="stylesheet" href="~/css/FAQ.css" asp-append-version="true" />

<h2 class="mb-4">Frequently Asked Questions</h2>

<div class="accordion" id="faqAccordion">
    @foreach (var item in Model.FAQs)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading-@item.Id">
                <button class="accordion-button collapsed" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapse-@item.Id"
                        aria-expanded="false"
                        aria-controls="collapse-@item.Id">
                    @item.Question
                </button>
            </h2>
            <div id="collapse-@item.Id" class="accordion-collapse collapse"
                 aria-labelledby="heading-@item.Id" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                    @item.Answer
                </div>
            </div>
        </div>
    }
</div>
