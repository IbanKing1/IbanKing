@page
@model IBanKing.Pages.MakePayment.Step2Model
@{
    ViewData["Title"] = "Step 2 - Confirm Payment";
    Layout = "_LayoutClient";
}

<h2 class="text-center">Step 2/3: Confirm Your Payment</h2>

<div class="card p-4 mt-3">
    <p><strong>Receiver IBAN:</strong> @Model.ReceiverIBAN</p>
    <p><strong>Amount:</strong> @Model.Amount @Model.Currency</p>
    <p><strong>High Priority:</strong> @(Model.IsHighPriority ? "Yes" : "No")</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-success mt-3">Confirm and Continue</button>
    <a class="btn btn-secondary mt-3" asp-page="Index">Go Back</a>
</form>
