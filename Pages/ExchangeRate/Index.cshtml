@page
@model IBanKing.Pages.ExchangeRate.IndexModel
@{
    ViewData["Title"] = "Exchange Rate";
    Layout = "_LayoutClient";
}

<h1 class="text-center">Exchange Rate</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Live Exchange Rates (Base: @Model.BaseCurrency)</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Currency</th>
                        <th>Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rate in Model.LiveRates)
                    {
                        <tr>
                            <td>@rate.Key</td>
                            <td>@rate.Value.ToString("0.0000")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h3>Currency Converter</h3>
            <div class="card">
                <div class="card-body">
                    <form id="conversionForm" method="post">
                        <div class="form-group">
                            <label>From Account (optional):</label>
                            <select class="form-control" id="fromAccount">
                                <option value="">Select Account</option>
                                @foreach (var account in Model.UserAccounts)
                                {
                                    <option value="@account.AccountId" data-currency="@account.Currency">
                                        @account.Type - @account.Balance @account.Currency
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>From Currency:</label>
                            <select class="form-control" id="fromCurrency" name="fromCurrency" required>
                                <option value="EUR">EUR</option>
                                <option value="USD">USD</option>
                                <option value="RON">RON</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>To Currency:</label>
                            <select class="form-control" id="toCurrency" name="toCurrency" required>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                                <option value="RON">RON</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Amount:</label>
                            <input type="number" class="form-control" id="amount" name="amount" required step="0.01" min="0.01">
                        </div>
                        <button type="submit" class="btn btn-primary">Convert</button>
                    </form>
                    <div id="conversionResult" class="mt-3" style="display: none;">
                        <h5>Conversion Result:</h5>
                        <p>Rate: <span id="rate"></span></p>
                        <p>Result: <span id="result"></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Update currency dropdown when account is selected
            $('#fromAccount').change(function() {
                const selectedOption = $(this).find('option:selected');
                if (selectedOption.val()) {
                    $('#fromCurrency').val(selectedOption.data('currency'));
                }
            });

            // Handle form submission
            $('#conversionForm').submit(function(e) {
                e.preventDefault();

                const formData = $(this).serialize();

                $.ajax({
                    url: '?handler=Convert',
                    type: 'POST',
                    data: formData,
                    success: function(data) {
                        if (data.error) {
                            alert(data.error);
                        } else {
                            $('#rate').text(`1 ${data.base_code} = ${data.conversion_rate} ${data.target_code}`);
                            $('#result').text(`${data.conversion_result} ${data.target_code}`);
                            $('#conversionResult').show();
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
            });
        });
    </script>
}