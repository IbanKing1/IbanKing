@page
@model IBanKing.Pages.UserFeedback.IndexModel
@{
    ViewData["Title"] = "Feedback";
    Layout = "_LayoutClient";
}

<h2 class="text-center mb-4">Leave Feedback</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Input.Message" class="form-label">Message</label>
                <textarea asp-for="Input.Message" class="form-control" rows="5" style="text-align: left;"></textarea>
                <span asp-validation-for="Input.Message" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit Feedback</button>
        </form>

        @if (Model.Success)
        {
            <div class="alert alert-success mt-3" role="alert">
                Feedback submitted successfully!
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
