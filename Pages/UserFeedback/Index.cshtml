@page
@model IBanKing.Pages.UserFeedback.IndexModel
@{
    ViewData["Title"] = "Feedback";
    Layout = "_LayoutClient";
}

<h2 class="text-center">Leave Feedback</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Message" class="control-label"></label>
                <textarea class="form-control" rows="5" name="Input.Message" style="text-align: left; padding-top: 0.375rem;">
                    @(Model.Success ? "" : Model.Input?.Message)
                </textarea>
                <span asp-validation-for="Input.Message" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit Feedback</button>
        </form>

        @if (Model.Success)
        {
            <div class="alert alert-success mt-3" role="alert"> 
                Feedback submitted successfully!
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
